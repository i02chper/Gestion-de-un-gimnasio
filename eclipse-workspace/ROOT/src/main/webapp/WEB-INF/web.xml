  	<jsp-file>/mvc/view/logoutView.jsp</jsp-file>
</servlet>

<servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
</servlet-mapping>
</web-app>
