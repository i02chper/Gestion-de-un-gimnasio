</servlet>

<servlet-mapping>
  	<servlet-name>modificar</servlet-name>
  	<url-pattern>/modificar</url-pattern>
</servlet-mapping>

<servlet>
  	<servlet-name>signup</servlet-name>
  	<jsp-file>/mvc/view/signupView.jsp</jsp-file>
</servlet>

<servlet-mapping>
  	<servlet-name>signup</servlet-name>
  	<url-pattern>/signup</url-pattern>
</servlet-mapping>

<servlet>
  	<servlet-name>nuevaClase</servlet-name>
