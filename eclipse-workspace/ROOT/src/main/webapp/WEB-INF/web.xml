<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	 	 xmlns="http://java.sun.com/xml/ns/javaee"
	 	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 	 id="P3" version="3.0">
<display-name>JSPApplication</display-name>
<welcome-file-list>
<welcome-file>index.jsp</welcome-file>
</welcome-file-list>

<env-entry>
	<env-entry-name>user</env-entry-name>
	<env-entry-type>java.lang.String</env-entry-type>
	<env-entry-value>rtYBFsUIJV</env-entry-value>
</env-entry>

<env-entry>
    <env-entry-name>url</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>jdbc:mysql://remotemysql.com:3306/rtYBFsUIJV</env-entry-value>
</env-entry>

<env-entry>
    <env-entry-name>pass</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>IS5OuJSkJY</env-entry-value>
</env-entry>

<context-param>
	<param-name>SQL_statements</param-name>
	<param-value>/WEB-INF/sql.properties</param-value>
</context-param>

<servlet>
  	<servlet-name>error</servlet-name>
  	<jsp-file>/include/errorPage.jsp</jsp-file>
</servlet>

<servlet-mapping>
  	<servlet-name>error</servlet-name>
  	<url-pattern>/error</url-pattern>
</servlet-mapping>

<servlet>
  	<servlet-name>login</servlet-name>
  	<jsp-file>/mvc/view/loginView.jsp</jsp-file>
</servlet>

<servlet-mapping>
  	<servlet-name>login</servlet-name>
